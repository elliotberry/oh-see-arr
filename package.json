{
    "name": "oh-see-arr",
    "description": "",
    "author": "ɛʟʟɨօȶ b  =^._.^= ∫ <elliot@email.gd>",
    "license": "The Unlicense",
    "main": "index.js",
    "bin": {
        "ocr": "./index.js"
    },
    "type": "module",
    "dependencies": {
        "screencapture": "^0.3.1",
        "tesseract.js": "^5.0.5"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin-js": "1.5.4",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        
        "prettier": "^2.7.1"
    },
    "prettier": {
        "arrowParens": "always",
        "bracketSameLine": true,
        "bracketSpacing": true,
        "semi": false,
        "experimentalTernaries": true,
        "singleQuote": false,
        "jsxSingleQuote": false,
        "quoteProps": "as-needed",
        "trailingComma": "none",
        "singleAttributePerLine": false,
        "htmlWhitespaceSensitivity": "css",
        "vueIndentScriptAndStyle": false,
        "proseWrap": "preserve",
        "insertPragma": false,
        "printWidth": 80,
        "requirePragma": false,
        "tabWidth": 2,
        "useTabs": false,
        "embeddedLanguageFormatting": "auto"
    },
    "eslintConfig": {
        "root": true,
        "plugins": [
            "prettier",
            "@stylistic/js"
        ],
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended"
        ],
        "env": {
            "es2021": true,
            "node": true,
            "es6": true,
            "es2024": true
        },
        "rules": {
            "no-unused-vars": "warn",
            "no-console": "off"
        }
    }
}
